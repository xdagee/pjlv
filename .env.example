# Application Configuration
APP_NAME="PJLV Leave Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pjlv_production
DB_USERNAME=your_database_user
DB_PASSWORD=your_strong_password_here

# Broadcasting
BROADCAST_DRIVER=log

# Cache Configuration  
CACHE_DRIVER=redis
CACHE_PREFIX=pjlv_

# Filesystem
FILESYSTEM_DISK=local

# Queue Configuration
QUEUE_CONNECTION=database

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# Redis Configuration (if using Redis for cache/sessions)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_DOMAIN=.your-domain.com

# Application Specific Settings
ADMIN_EMAIL=admin@your-domain.com
SYSTEM_TIMEZONE=Africa/Accra

# Rate Limiting
ADMIN_RATE_LIMIT=60
API_RATE_LIMIT=60

# Monitoring (Optional - Sentry, Bugsnag, etc.)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Backup Configuration (if using Laravel Backup)
BACKUP_NOTIFICATION_EMAIL=admin@your-domain.com
